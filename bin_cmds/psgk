#!/bin/bash

if [ $# -eq 0 ]; then
  echo "Usage: $0 <process_name>"
  exit 1
fi

process_name=$1

# Récupérer les identifiants de processus (PID) correspondants au nom donné
pids=$(ps aux | grep "$process_name" | grep -v grep | awk '{print $2}')

if [ -z "$pids" ]; then
  echo "Aucun processus trouvé avec le nom '$process_name'"
  exit 1
fi

# Tuer les processus un par un
for pid in $pids; do
  echo "Termination du processus $pid"
  kill -9 "$pid"
done

echo "Tous les processus liés à '$process_name' ont été tués."

